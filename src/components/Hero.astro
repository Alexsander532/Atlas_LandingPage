<style>
    .hero {
        position: relative;
        min-height: 100vh;
        display: flex;
        align-items: center;
        overflow: hidden;
    }

    .hero-bg {
        position: absolute;
        inset: 0;
        z-index: 0;
    }

    .hero-bg-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to right,
            rgba(10, 10, 10, 0.85) 0%,
            rgba(10, 10, 10, 0.7) 50%,
            rgba(10, 10, 10, 0.4) 100%
        );
    }

    .hero-content {
        position: relative;
        z-index: 1;
        display: grid;
        grid-template-columns: 1fr 1fr;
        align-items: center;
        gap: 4rem;
        padding-top: 6rem;
        padding-bottom: 4rem;
    }

    .hero-eyebrow {
        color: var(--text-muted);
        font-size: 0.9rem;
        font-weight: 500;
        margin-bottom: 1.5rem;
        letter-spacing: 0.5px;
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 800;
        line-height: 1.05;
        margin-bottom: 1.5rem;
        letter-spacing: -0.02em;
    }

    .hero-description {
        color: var(--text-secondary);
        font-size: 1.1rem;
        line-height: 1.7;
        max-width: 500px;
        margin-bottom: 2.5rem;
    }

    .hero-actions {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .store-btn {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        background: var(--bg-card);
        border: 1px solid var(--border-subtle);
        padding: 0.75rem 1.5rem;
        border-radius: var(--radius-lg);
        transition: all 0.3s;
        cursor: pointer;
    }

    .store-btn:hover {
        background: var(--bg-card-hover);
        border-color: var(--border-hover);
        transform: translateY(-2px);
    }

    .store-btn-icon {
        color: var(--text-primary);
    }

    .store-btn-label {
        display: block;
        font-size: 0.7rem;
        color: var(--text-muted);
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .store-btn-name {
        display: block;
        font-size: 1rem;
        font-weight: 700;
        color: var(--text-primary);
    }

    /* Phone mockup */
    .hero-phone {
        display: flex;
        justify-content: center;
    }

    .phone-frame {
        width: 280px;
        background: #1a1a1a;
        border-radius: 40px;
        border: 3px solid #333;
        padding: 12px;
        box-shadow: 
            0 0 60px rgba(77, 159, 255, 0.15),
            0 25px 50px rgba(0, 0, 0, 0.5);
        position: relative;
    }

    .phone-notch {
        width: 120px;
        height: 28px;
        background: #1a1a1a;
        border-radius: 0 0 16px 16px;
        position: absolute;
        top: 0;
        left: 50%;
        transform: translateX(-50%);
        z-index: 2;
    }

    .phone-screen {
        background: #0d0d0d;
        border-radius: 28px;
        overflow: hidden;
        min-height: 520px;
        display: flex;
        flex-direction: column;
    }

    .app-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2.5rem 1rem 0.75rem;
        font-size: 0.9rem;
        font-weight: 700;
    }

    .app-tabs {
        display: flex;
        gap: 0.25rem;
        padding: 0.5rem;
        margin: 0 0.5rem;
        background: rgba(255,255,255,0.05);
        border-radius: var(--radius-full);
    }

    .tab {
        flex: 1;
        text-align: center;
        padding: 0.4rem 0.5rem;
        border-radius: var(--radius-full);
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--text-muted);
        transition: all 0.3s;
    }

    .tab.active {
        background: var(--accent-primary);
        color: #000;
    }

    .app-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
        gap: 1.5rem;
    }

    .checkin-circle {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 3px solid var(--accent-primary);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        box-shadow: 0 0 30px var(--accent-glow);
    }

    .checkin-number {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--accent-primary);
    }

    .checkin-label {
        font-size: 0.8rem;
        color: var(--text-muted);
    }

    .checkin-status {
        color: var(--pill-green);
        font-weight: 600;
        font-size: 0.85rem;
    }

    .streak-bar {
        background: rgba(255,255,255,0.05);
        padding: 0.5rem 1.2rem;
        border-radius: var(--radius-full);
        font-size: 0.8rem;
        color: var(--text-secondary);
    }

    .app-bottom-nav {
        display: flex;
        justify-content: space-around;
        padding: 0.75rem;
        border-top: 1px solid rgba(255,255,255,0.05);
        font-size: 1.2rem;
    }

    @media (max-width: 900px) {
        .hero-content {
            grid-template-columns: 1fr;
            text-align: center;
            padding-top: 8rem;
        }

        .hero-title {
            font-size: 2.8rem;
        }

        .hero-description {
            margin: 0 auto 2rem;
        }

        .hero-actions {
            justify-content: center;
        }

        .hero-overlay {
            background: rgba(10, 10, 10, 0.75);
        }

        .hero-phone {
            display: none;
        }
    }
</style>
